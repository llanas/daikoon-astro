---
import { Image } from "astro:assets";
import SvgIcon from "./common/svg-icon.astro";
import ImageConcept1 from "../assets/images/concept-1.png";
import ImageConcept2 from "../assets/images/concept-2.png";
import ImageConcept3 from "../assets/images/concept-3.png";
import IconConcept1 from "../assets/svg/message-icon.svg?raw";
import DaikoonIcon from "../assets/svg/daikoon-icon.svg?raw";
import IconConcept3 from "../assets/svg/app-message-icon.svg?raw";
import RelationIcon from "../assets/svg/relation-icon.svg?raw";
import ShoppingIcon from "../assets/svg/shopping-icon.svg?raw";
import ParametersIcon from "../assets/svg/parameters-icon.svg?raw";
import RightArrow from "../assets/svg/right-arrow.svg?raw";
import DaikoonBluryImage from "../assets/images/daikoon-blury.png";

const listConcepts = [
  {
    image: ImageConcept1,
    logo: IconConcept1,
    title: "Créer ton défi ou rejoins une partie",
    description:
      "« Qui va gagner l’Eurovision cette année ? » Choisis la thématique de ton choix : sport, émission de TV ou même ton cousin nul à la pétanque ! Les options de personnalisation sont infinies.",
  },
  {
    image: ImageConcept2,
    logo: DaikoonIcon,
    title: "Récupère tes gains et remplis ta cagnotte",
    description:
      "100% gratuit, aucune données bancaires à ajouter ! Tu gagnes simplement des daikoins, notre monnaie virtuelle. Aucune obligation d’achat, que du kiff.",
  },
  {
    image: ImageConcept3,
    logo: IconConcept3,
    title: "Dépense tes daikoins chez nos partenaires",
    description:
      "Une fois tes daikoins en poche, tu peux te faire plaisir chez un large choix de partenaires : restaurants, commerces, cinémas, musées, activités fun et pleins d’autres encore !",
  },
];

const listExemple = [
  {
    icon: ParametersIcon,
    title: "Facile à utiliser et sans limites",
    description: "Simple d’utilisation et des défis rapides à créer.",
  },
  {
    icon: DaikoonIcon,
    title: "0€ à miser, que des daikoins !",
    description:
      "Pas d’argent à dépenser, ici on ne gagne que des daikoins à obtenir gratuitement.",
  },
  {
    icon: RelationIcon,
    title: "À tout moment, défie tes proches",
    description:
      "En famille ou entre potes, les défis sont 100% personnalisables et illimités.",
  },
  {
    icon: ShoppingIcon,
    title: "Profite d’un max de bons plans",
    description:
      "Tu as gagné ? Dépenses tes daikoins chez nos partenaires selon tes envies.",
  },
];
---

<div class="w-full bg-dark-blue">
  <section
    class="md:h-screen max-w-screen-xl m-auto flex flex-col items-start justify-center px-8 py-12"
  >
    <h2
      class="font-aspekta text-4xl md:text-[80px] tracking-tight leading-none text-light-blue"
    >
      Le concept
    </h2>
    <div class="flex flex-col md:flex-row items-start gap-24 md:gap-12 mt-14">
      {
        listConcepts.map((concept) => {
          return (
            <article class="flex flex-col md:w-1/3 gap-4 justify-center items-center">
              <Image src={concept.image} alt="" />
              <div class="flex flex-row justify-center items-center gap-8">
                <div class=" bg-dark-blue rounded-md shadow-md p-4">
                  <SvgIcon raw={concept.logo} class="size-12" />
                </div>
                <h3 class="text-2xl text-light-blue font-bold">
                  {concept.title}
                </h3>
              </div>
              <p class="mt-4 text-xl font-gotham">{concept.description}</p>
            </article>
          );
        })
      }
    </div>
  </section>
  <div
    class="relative md:h-screenm-auto flex flex-col items-start justify-center py-12"
  >
    <div class="absolute w-full border border-light-blue top-0">
      <div
        class="size-12 rounded-full bg-light-blue absolute -translate-y-1/2 -translate-x-1/2 p-2 left-1/2 shadow-lg cursor-pointer"
      >
        <SvgIcon raw={RightArrow} class="text-dark-blue rotate-90" />
      </div>
    </div>
    <section
      class="m-auto max-w-screen-lg mt-12 px-8 flex flex-col justify-center items-center md:grid md:grid-cols-3 md:grid-rows-2 gap-8 md:gap-10 [&>:not(:first-child)]:aspect-square *:border-[1px] *:border-light-blue *:rounded-3xl"
    >
      <div
        class="flex flex-col gap-4 justify-center items-center md:items-start col-span-2 border-none"
      >
        <Image src={DaikoonBluryImage} class="w-4/5 md:w-1/2" alt="" />
        <h2
          class="font-aspekta text-center md:text-left text-4xl md:text-6xl leading-none text-light-blue"
        >
          une appli entièrement gratuite !
        </h2>
      </div>
      {
        listExemple.map((exemple) => {
          return (
            <article class="flex h-full w-full flex-col justify-start p-8 gap-2">
              <div class="p-4 bg-primary rounded-md w-fit">
                <SvgIcon raw={exemple.icon} class="size-6" />
              </div>
              <h3 class="text-xl text-light-blue font-bold">{exemple.title}</h3>
              <p class="text-lg font-gotham">{exemple.description}</p>
            </article>
          );
        })
      }
    </section>
  </div>
</div>
